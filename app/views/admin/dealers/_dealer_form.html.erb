<% form_for :dealer, dealer, :url => {:action => action}, :html => {:multipart => true, :method => method} do |form| %>
  <div class="query_title">&nbsp;</div>
  <div class="float_left query_label">用户名</div>
  <div class="query_text">
    &nbsp;&nbsp;<%= form.text_field :username %>
    <span id="dealer_name_error" class="error" style="display:none;">请输入用户名</span>
  </div>
  <div class="float_left query_label">密码</div>
  <div class="query_text">
    &nbsp;&nbsp;<%= form.password_field :password, {:value => ""} %>
    <% if dealer %>
      <span class="error">如不修改请留空</span>
    <% end %>
    <span id="dealer_pasnsword_error" class="error" style="display:none;">请输入密码</span>
  </div>
  <div class="float_left query_label">地址</div>
  <div class="query_text">
    &nbsp;&nbsp;<%= form.text_field :address %>
    <span id="dealer_address_error" class="error" style="display:none;">请输入地址</span>
  </div>
  <div class="float_left query_label">邮箱</div>
  <div class="query_text">
    &nbsp;&nbsp;<%= form.text_field :email %>
    <span id="dealer_email_error" class="error" style="display:none;">请输入邮箱</span>
  </div>
  <div class="float_left query_label">QQ</div>
  <div class="query_text">
    &nbsp;&nbsp;<%= form.text_field :qq %>
    <span id="dealer_qq_error" class="error" style="display:none;">请输入QQ</span>
  </div>
  <div class="float_left query_label">手机号码</div>
  <div class="query_text">
    &nbsp;&nbsp;<%= form.text_field :cell_phone %>
    <span id="dealer_cell_phone_error" class="error" style="display:none;">请输入手机号码</span>
  </div>
  <div class="float_left query_label">固定电话</div>
  <div class="query_text">
    &nbsp;&nbsp;<%= form.text_field :phone %>
    <span id="dealer_phone_error" class="error" style="display:none;">请输入固定电话</span>
  </div>
  <div class="float_left query_label">身份证号</div>
  <div class="query_text">
    &nbsp;&nbsp;<%= form.text_field :id_card %>
    <span id="dealer_id_card_error" class="error" style="display:none;">请输入身份证号码</span>
  </div>
  <div class="float_left query_label">真实姓名</div>
  <div class="query_text">
    &nbsp;&nbsp;<%= form.text_field :name %>
    <span id="dealer_name_error" class="error" style="display:none;">请输入真实姓名</span>
  </div>
  <div class="float_left query_label">身份证复印件</div>
  <div class="query_text">
    &nbsp;&nbsp;<%= form.file_field :id_card_image, {:name => "image[uploaded_data]"} %>
    <% if dealer %>
      <span class="error">如不修改请留空</span>
    <% end %>
    <span id="dealer_id_card_image_error" class="error" style="display:none;">请选择身份证复印件</span>
  </div>
  <div class="float_left query_label">银行帐号</div>
  <div class="query_text">
    &nbsp;&nbsp;<%= form.text_field :bank_account %>
    <span id="dealer_bank_account_error" class="error" style="display:none;">请输入银行帐号</span>
  </div>
  <div class="float_left query_label">开户银行</div>
  <div class="query_text">
    &nbsp;&nbsp;<%= form.text_field :bank_name %>
    <span id="dealer_bank_name_error" class="error" style="display:none;">请输入银行名字</span>
  </div>
  <div class="float_left query_label">开户银行地址</div>
  <div class="query_text">
    &nbsp;&nbsp;<%= form.text_field :bank_location %>
    <span id="dealer_bank_location_error" class="error" style="display:none;">请输入开户银行地址</span>
  </div>
  <div class="query_text query_submit">&nbsp;&nbsp;
    <%= form.submit "确定", :name => nil %>&nbsp;&nbsp;
  </div>
<% end %>