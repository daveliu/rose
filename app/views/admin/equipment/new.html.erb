<%= javascript_include_tag "admin/forms" %>
<% form_for :eq, :url => {:action => "create"}, :html => {:multipart => true} do |form| %>
  <div class="query_title">&nbsp;</div>
  <div class="float_left query_label">名称</div>
  <div class="query_text">
    &nbsp;&nbsp;<%= form.text_field :name %>
    <span id="admin_name_error" class="error" style="display:none;">请输入武器名称</span>
  </div>
  <div class="float_left query_label">图片</div>
  <div class="query_text">
    &nbsp;&nbsp;<%= form.file_field(:image) %>
    <span id="admin_image_error" class="error" style="display:none;">请选择图片</span>
  </div>
  <div class="float_left query_label">类别</div>
  <div class="query_text">
    &nbsp;&nbsp;<%= form.select :equipment_category_id, get_eq_options(@categories) %>
    <span id="admin_equipment_category_id_error" class="error" style="display:none;">请选择装备类别</span>
  </div>
  <div class="float_left query_label">类型</div>
  <div class="query_text">
    &nbsp;&nbsp;<%= form.select :equipment_type_id, get_eq_options(@types) %>
    <span id="admin_equipment_type_id_error" class="error" style="display:none;">请选择装备类型</span>
  </div>
  <div class="float_left query_label">职业</div>
  <div class="query_text">
    <% @roles.each do |role| %>
      <input type="checkbox" name="roles[<%= role.id %>]" value="<%= role.id %>" class="eq_role_select">&nbsp;<%= role.value %>&nbsp;&nbsp;&nbsp;&nbsp;
    <% end %>
    <span id="admin_equipment_type_id_error" class="error" style="display:none;">请选择装备职业</span>
  </div>
  <div class="float_left query_label">属性</div>
  <div class="query_text">
    &nbsp;&nbsp;<%= form.select :equipment_serie_id, get_eq_options(@series) %>
    <span id="admin_equipment_serie_id_error" class="error" style="display:none;">请选择装备属性</span>
  </div>
  <div class="float_left query_label">级别</div>
  <div class="query_text">
    &nbsp;&nbsp;<%= form.select :equipment_level_id, get_eq_options(@levels) %>
    <span id="admin_equipment_level_id_error" class="error" style="display:none;">请选择装备级别</span>
  </div>
  <div class="float_left query_label">副本</div>
  <div class="query_text">
    &nbsp;&nbsp;<%= form.select :equipment_level_id, get_eq_options(@instances) %>(PVP装备不用选择)
    <span id="admin_equipment_instance_id_error" class="error" style="display:none;">请选择装备副本</span>
  </div>
  <div class="float_left query_label">是否单卖</div>
  <div class="query_text">
    &nbsp;&nbsp;<%= form.radio_button(:singlesellable, "1") %>是&nbsp;&nbsp;<%= form.radio_button(:singlesellable, "0") %>否
    <span id="admin_equipment_instance_id_error" class="error" style="display:none;">请选择是否单卖</span>
  </div>
  <div class="float_left query_label">价格</div>
  <div class="query_text">
    &nbsp;&nbsp;<%= form.text_field(:price) %>
  </div>
  <div class="float_left query_label">&nbsp;</div>
  <div class="query_text query_submit">&nbsp;&nbsp;
    <%= form.submit "确认添加" %>&nbsp;&nbsp;
  </div>
<% end %>