<div class="query_text query_submit">
  &nbsp;&nbsp;<input type="button" id="btnReset" value="添加PVE套装" style="width:100px;" onClick="location.href='<%= new_admin_pve_suit_url %>'">
</div>
<br>
<%= flash[:notice] %>

<div class="query_title">共<%= @pve_suits.size %>个套装</div>
<%if @pve_suits.empty? %>
  <div class="datalist_list_none">无任何套装</div>
<% else %>
  <div id="datalist_list_order">
    <span class="cls_order_name">装备名称</span>
    <span class="cls_order_name" style="width: 100px;"></span>
    <span class="cls_order_name" style="width: 100px;"></span>
  </div>
  <% for suit in @pve_suits %>
    <div id="datalist_list_order" onmouseover="javascript: this.style.backgroundColor = '#f5f5f5';" onmouseout="javascript: this.style.backgroundColor = '#ffffff';">
      <span class="cls_order_name"><%= suit.name %>&nbsp;</span>
      <span class="query_submit" style="width: 100px;">
        <%= link_to "编辑", edit_admin_pve_suit_url(suit.id) %>
      </span>
      <span class="query_submit" style="width: 100px;">
        <%= link_to "删除", admin_pve_suit_url(suit.id), {:method => :delete, :confirm => "确定删除#{suit.name}？"} %>
      </span>
    </div>
  <% end %>
<% end %>