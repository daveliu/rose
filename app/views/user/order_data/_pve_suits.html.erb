<% pve_suits.each do |suit| %>
  <input id="pve_suit_select_<%= suit.id %>" type="checkbox" value="<%= suit.id %>" onclick="selectPveSuit(this.checked, <%= suit.id %>)"
         <%= "checked" if session[:order] && session[:order][:pve] && session[:order][:pve][:suits] && session[:order][:pve][:suits].include?(suit.id) %> />
  &nbsp;&nbsp;&nbsp;&nbsp;
  <%= suit.name %>&nbsp;&nbsp;
  <%= suit.price %><br><br>
<% end %>